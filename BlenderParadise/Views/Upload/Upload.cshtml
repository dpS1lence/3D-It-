@using BlenderParadise.Models.Product;
@model ProductModel
@{
    ViewData["Title"] = "Upload Product";
}
<h1>@ViewData["Title"]</h1>

<link href="~/css/upload.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form enctype="multipart/form-data" asp-action="Upload">
            <div class="text-center mb-3">
                <label asp-for="@Model.Name">Name</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Description">Description</label>
                <textarea class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Description" rows="3"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Polygons">Faces</label>
                <input type="number" class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Polygons" />
                <span asp-validation-for="@Model.Polygons" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Vertices">Vertices</label>
                <input type="number" class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Vertices" />
                <span asp-validation-for="@Model.Vertices" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Geometry">Edges</label>
                <input type="number" class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Geometry" />
                <span asp-validation-for="@Model.Geometry" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <div class="form-group">
                    <label asp-for="@Model.Category">Category</label>
                    <select asp-for="@Model.Category" class="form-control" id="exampleFormControlSelect1" required>
                        <option>Art</option>
                        <option>Character</option>
                        <option>Animal</option>
                        <option>Office</option>
                        <option>People</option>
                        <option>Food & Drink</option>
                        <option>Architecture</option>
                        <option>Technology</option>
                    </select>
                    <span asp-validation-for="@Model.Category" class="text-danger"></span>
                </div>
            </div>
            <div class="center">
                <p class="drop-title">Upload file</p>
                <input asp-for="@Model.AttachmentModel" class="form-control" accept=".blend" type="file" required />
                <span asp-validation-for="@Model.AttachmentModel" class="text-danger"></span>
            </div>
            <div class="center">
                <p class="drop-title">Upload cover photo</p>
                <input asp-for="@Model.CoverPhoto" class="form-control" accept=".png" type="file" required />
                <span asp-validation-for="@Model.CoverPhoto" class="text-danger"></span>
            </div>
            <div class="center">
                <p class="drop-title">Upload additional photos</p>
                <input asp-for="@Model.Photos" class="form-control" accept=".png" type="file" multiple required />
                <span asp-validation-for="@Model.Photos" class="text-danger"></span>
            </div>
            <div class="center">
                <p class="drop-title">Upload textures</p>
                <input asp-for="@Model.PhotosZip" class="form-control" accept=".zip" type="file" required />
                <span asp-validation-for="@Model.PhotosZip" class="text-danger"></span>
            </div>
            <div class="text-center">
                <form asp-controller="Upload" asp-action="Upload" class="input-group-sm">
                    <input type="submit" value="Upload" class="uploadBtn" />
                </form>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}