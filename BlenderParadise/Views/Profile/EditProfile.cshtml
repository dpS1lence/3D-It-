@using BlenderParadise.Models.Profile;
@model EditProfileModel
@{
    ViewData["Title"] = "Upload Product";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Edit Profile</h1>
    <form enctype="application/x-www-form-urlencoded" asp-action="EditProduct">
        <div class="text-center mb-3">
            <label asp-for="@Model.UserName">Username</label>
            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.UserName" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="@Model.Email">Email</label>
            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="@Model.Description">Description</label>
            <textarea class="form-control" autocomplete="username" aria-required="true" asp-for="@Model.Description" rows="3"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="text-center mb-3">
            <label asp-for="@Model.ProfilePicture">ProfilePicture</label>
            <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.ProfilePicture" />
            <span asp-validation-for="@Model.ProfilePicture" class="text-danger"></span>
        </div>
        <form method="post" asp-area="" asp-controller="Profile" asp-action="EditProfile">
            <button type="submit" class="buttonTag buttonTag-teal">Upload</button>
        </form>
    </form>
</div>