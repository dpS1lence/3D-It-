@model IndexModel
@{
    ViewData["Title"] = "Home Page";

    string value = "";
}

<link href="~/css/backgroundhomepage.css" rel="stylesheet" />

<p style="background-image: url(https://wallpaperaccess.com/full/2092433.jpg);">

    <div class="background">
        <div class="text-center">
            <h1 class="display-4">Welcome to the blender paradise</h1>
            <h1 class="display-4">Enjoy your stay</h1>
            <h1 style="padding: 20px" class="display-4"></h1>
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <div>
                    <text style="font-size: 30px" class="display-4">Today's modeling challenge is</text>
                    <h1 style="padding: 2px" class="display-4"></h1>
                    <a style="color: darkcyan; font-size: 30px" class="display-4" href="@Model.Link">@Model.Challenge</a>
                    <h1 style="padding: 2px" class="display-4"></h1>
                    <text style="font-size: 30px" class="display-4">Start modeling and make sure to share your work!</text>
                    <h1 style="padding: 10px" class="display-4"></h1>
                    <text style="font-size: 28px" class="display-4">Yestarday's challenge was</text>
                    <h6 style="color: darkcyan; font-size: 30px" class="display-4">@Model.PrevChallenge</h6>
                    <h1 style="padding: 10px" class="display-4"></h1>
                </div>
            }
        </div>
        <form method="post">
            <div class="centered">
                <input asp-for="@value" type="text" placeholder="Search" class="searchTerm">
                <button type="submit" class="searchButton">Search</button>
            </div>
        </form>
    </div>
