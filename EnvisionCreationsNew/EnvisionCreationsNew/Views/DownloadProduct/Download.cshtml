@model DownloadProductModel
@{
    ViewData["Title"] = "Avalable Models";
}
<h1>@ViewData["Title"]</h1>

<span>@Model.Name</span>
<span>@Model.Description</span>
<span>@Model.Polygons</span>
<span>@Model.Vertices</span>
<span>@Model.Geometry</span>
@*<form method="post" asp-controller="User" asp-action="UserProfile" asp-route="@Model.UserId">
    <button type="submit" class="text-black">@Model.UserName</button>
</form>*@
<img src="@Model.CoverPhoto" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
@foreach (var item in Model.Photos)
{
    <img src="@item" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
}

<form method="post" asp-controller="DownloadProduct" asp-action="GetDownloadModel" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-primary">Download Model</button>
</form>
<form method="post" asp-controller="DownloadProduct" asp-action="GetDownloadZip" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-primary">Download Zip</button>
</form>