@using static System.Net.Mime.MediaTypeNames
@using System.Drawing
@model List<ViewProductModel>
@{
    ViewData["Title"] = "Avalable Models";
}
<h1>@ViewData["Title"]</h1>

<link href="~/css/card.css" rel="stylesheet" />

@if (Model.Count <= 0)
{
    <h2 class="display-4">No</h2>
}
<div class="text-center row">
    @foreach (var product in Model)
    {
        <div class="card">
            <div class="imgBox">
                <img src="@product.Photo" class="mouse">
            </div>
            <div class="contentBox">
                <h3>@product.Name</h3>
                <h2 class="price">>@product.Category</h2>
                <form method="get" asp-controller="DownloadProduct" asp-action="Download" asp-route-id="@product.Id">
                    <button type="submit" class="buy">Download</button>
                </form>
            </div>
        </div>
    }
</div>
